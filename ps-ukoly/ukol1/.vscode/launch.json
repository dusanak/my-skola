    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Připojit",
            "type": "cppdbg",
            "request": "attach",
            "program": "bubblesort",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Povolit přehledný výpis pro gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Spustit",
            "type": "cppdbg",
            "request": "launch",
            "program": "bubblesort",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Povolit přehledný výpis pro gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}